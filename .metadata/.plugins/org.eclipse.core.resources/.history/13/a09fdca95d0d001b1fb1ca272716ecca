		int choice = s.nextInt();
		if(choice==1) {
			System.out.println("We have 5 models");
			System.out.println("1.Harley Davidson");
			System.out.println("2.Ducati");
			System.out.println("3.Ninja H2R");
			System.out.println("4.Suzuki");
			System.out.println("5.Yamaha");
			System.out.println("Enter Your choice");
			
			int n;
			n=s.nextInt();
			if(n==1) {
				System.out.println("Harley Davidson"+"Price:"+b1.cost);
			}else if(n==2) {
				System.out.println("Ducati"+"Price:"+b2.cost);
			}else if(n==3) {
				System.out.println("Ninja H2R"+"Price:"+b3.cost);
			}else if(n==4){
				System.out.println("Suzuki"+"Price:"+b4.cost);
			}else if(n==5) {
				System.out.println("Yamaha"+"Price:"+b5.cost);
			}else {
				System.out.println("please enter Your choices between 1-5");
			}
			
		}else if(choice==2) {
			System.out.println("We have 5 models");
			System.out.println(1+c1.name);
			System.out.println(2+c2.name);
			System.out.println(3+c3.name);
			System.out.println(4+c4.name);
			System.out.println(5+c5.name);
			System.out.println("Enter Your choice");
			
			int n;
			n=s.nextInt();
			if(n==1) {
				System.out.println("Harley Davidson"+"Price:"+c1.cost);
			}else if(n==2) {
				System.out.println("Ducati"+"Price:"+c2.cost);
			}else if(n==3) {
				System.out.println("Ninja H2R"+"Price:"+c3.cost);
			}else if(n==4){
				System.out.println("Suzuki"+"Price:"+c4.cost);
			}else if(n==5) {
				System.out.println("Yamaha"+"Price:"+c5.cost);
			}else {
				System.out.println("please enter Your choices between 1-5");
			}
		}else {
			
			System.out.println("Please Enter choices between 1-2");
		}
